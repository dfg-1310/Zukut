<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="login_text_view">
        <item name="android:textColor">#000000</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dip</item>
        <item name="android:layout_marginTop">15dip</item>
        <item name="android:layout_marginLeft">25dip</item>
        <item name="android:layout_marginBottom">3dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
			
        
        </style>
    
    
    <style name="login_edittext_border_layout">
        <item name="android:background">#7a7e81</item>
        <item name="android:padding">2dip</item>
        <item name="android:layout_marginLeft">20dip</item>
        <item name="android:layout_marginRight">20dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="login_edit_text">
        <item name="android:textColor">#000000</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">40dip</item>
    </style>

    <style name="button">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:paddingLeft">12dip</item>
        <item name="android:paddingRight">12dip</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    
    
    <style name="wrap_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_content.select_postcard_option">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top</item>
        <item name="android:background">@drawable/blue_rounded_border</item>
        <item name="android:paddingBottom">@dimen/small_padding</item>
        <item name="android:paddingLeft">@dimen/large_padding</item>
        <item name="android:paddingRight">@dimen/large_padding</item>
        <item name="android:paddingTop">@dimen/small_padding</item>
        <item name="android:textColor">@color/white_color_code</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>
    
    
    <style name="fill_parent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>
    
    <style name="height_wrap_content">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="height_wrap_content.blue_rounded_btn_disabled">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/blue_rounded_border</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">5dip</item>
        <item name="android:layout_marginRight">20dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

  
    <style name="wrap_width_weight.red_rounded_btn">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/incoming_call_popup_accept_button_selector</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="wrap_width_weight.green_rounded_btn">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/incoming_call_popup_decline_button_selector</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginLeft">5dp</item>
        <item name="android:paddingTop">10dip</item>
        <item name="android:paddingBottom">10dip</item>
        <item name="android:paddingLeft">15dip</item>
        <item name="android:paddingRight">15dip</item>
        <item name="android:layout_marginRight">5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="weight_one">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:contentDescription">desc</item>
        <item name="android:layout_weight">1</item>
    </style>
    
     <style name="height_weight">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">fill_parent</item>
    </style>

    <style name="wrap_width_weight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="wrap_height_weight">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="height_weight.orientation_vertical">
        <item name="android:orientation">vertical</item>
    </style>  
    
</resources>
